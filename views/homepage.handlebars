{{#each post}}
    <div class="container my-2 post">
        <header class="d-flex flex-row justify-space-between p-2">
            <h4 class="text">{{this.title}}</h4>
            <p class="text ">Posted by {{this.user.username}} on {{this.published_at}}</p>
        </header>
        <div>
            <p class="p-2 text-break">{{this.content}}</p>
        </div>
    </div>
{{/each}}